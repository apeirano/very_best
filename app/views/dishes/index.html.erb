
<div id="left_panel"  style="float:left; width:250px;">
    
    <div class="row mb-1">
      <div class="col-md-12">
        <%= search_form_for @q, :class => "collapse", :id => "dishes_filters" do |f| %>
          <p class="lead">Narrow results:</p>
    
    <div class="form-group">    
        <%= f.label :name_cont, "Name contains" %>
        <%= f.text_field :name_cont, :class => "form-control", :placeholder => "Name contains" %>
    </div>  

    <div class="form-group">
          <label for="q_cuisine_id_eq_any">Cuisine</label>
    
              <div class="checkbox">
                <label>
                  <input type="checkbox" name="q[cuisine_id_eq_any][]" id="q_cuisine_id_eq_any_" value="2" />
                  American
                </label>
              </div>
              <div class="checkbox">
                <label>
                  <input type="checkbox" name="q[cuisine_id_eq_any][]" id="q_cuisine_id_eq_any_" value="1" />
                  Breakfast
                </label>
              </div>
              <div class="checkbox">
                <label>
                  <input type="checkbox" name="q[cuisine_id_eq_any][]" id="q_cuisine_id_eq_any_" value="8" />
                  Classic
                </label>
              </div>
              <div class="checkbox">
                <label>
                  <input type="checkbox" name="q[cuisine_id_eq_any][]" id="q_cuisine_id_eq_any_" value="7" />
                  Dessert
                </label>
              </div>
              <div class="checkbox">
                <label>
                  <input type="checkbox" name="q[cuisine_id_eq_any][]" id="q_cuisine_id_eq_any_" value="3" />
                  Drink
                </label>
              </div>
              <div class="checkbox">
                <label>
                  <input type="checkbox" name="q[cuisine_id_eq_any][]" id="q_cuisine_id_eq_any_" value="6" />
                  French
                </label>
              </div>
              <div class="checkbox">
                <label>
                  <input type="checkbox" name="q[cuisine_id_eq_any][]" id="q_cuisine_id_eq_any_" value="11" />
                  Indian
                </label>
              </div>
              <div class="checkbox">
                <label>
                  <input type="checkbox" name="q[cuisine_id_eq_any][]" id="q_cuisine_id_eq_any_" value="4" />
                  Italian
                </label>
              </div>
              <div class="checkbox">
                <label>
                  <input type="checkbox" name="q[cuisine_id_eq_any][]" id="q_cuisine_id_eq_any_" value="9" />
                  Japanese
                </label>
              </div>
              <div class="checkbox">
                <label>
                  <input type="checkbox" name="q[cuisine_id_eq_any][]" id="q_cuisine_id_eq_any_" value="5" />
                  Salad
                </label>
              </div>
              <div class="checkbox">
                <label>
                  <input type="checkbox" name="q[cuisine_id_eq_any][]" id="q_cuisine_id_eq_any_" value="10" />
                  Seafood
                </label>
              </div>
          </div>
    
          <%= f.submit :class => "btn btn-primary btn-block mb-1" %>
    
          <a href="/dishes" class="btn btn-default btn-block mb-1">Clear filters</a>
        <% end %>
        <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#dishes_filters">
          Show Filters
        </a>
      </div>
    </div>
    
</div>

<div id="contents"    style="float:left; width:600px;">

  <div class="row">
    <div class="col-md-12">
      <table class="table table-striped table-hover">
        <tr>
          <th>The very best...</th>
          <th>is at...</th>
          <th>Cuisine</th>
        </tr>
  
        <% @dishes.each do |dish| %>
        <tr>
          <td><%= dish.name %></td>
          <td> 
             <%= select_tag(:venue_id, options_from_collection_for_select(Venue.order("name ASC"), :id, :name), :class => "form-control") %>
              <button class="btn btn-primary btn-sm">
                  <i class="fa fa-heart"></i>
              </button>
          
          </td>
          <td>
            <% if dish.cuisine.present? %>
              <a href="/cuisines/<%= dish.cuisine.id %>">
                <%= dish.cuisine.name %>
              </a>
            <% end %>
          </td>
        </tr>
        <% end %>
      </table>
      <%= paginate @dishes, theme: 'twitter-bootstrap-4' %>
    </div>
  </div>


</div>

  <div id="right_panel" style="float:left; width:100px;">   
    <a href="/venues/new" class="btn btn-lg btn-success">Add a new venue</a>
  </div>





